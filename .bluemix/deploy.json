{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Health Blockchain",
  "description": "",
  "longDescription": "The Delivery Pipeline automates the continuous deployment of the app.",
  "type": "object",
  "properties": {
    "app-region": {
      "description": "The bluemix region",
      "type": "string"
    },
    "app-organization": {
      "description": "The bluemix org",
      "type": "string"
    },
    "app-space": {
      "description": "The bluemix space",
      "type": "string"
    },
    "app-name": {
      "description": "The name of the deployed application",
      "type": "string"
    }
  },
  "required": [
    "app-region",
    "app-organization",
    "app-space",
    "app-name"
  ],
  "form": [{
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
    },
    {
      "type": "text",
      "title": "App name",
      "description": "Name of the application",
      "key": "app-name"
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["33%", "33%", "33%"],
      "items": [
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "select",
          "key": "app-region"
        },
        {
          "type": "select",
          "key": "app-organization"
        },
        {
          "type": "select",
          "key": "app-space",
          "readonly": false
        }
      ]
    }
  ]
}
